<Window x:Class="Plugin_AnalysisMaster.UI.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="关于插件" Height="300" Width="360" 
        WindowStartupLocation="CenterScreen" AllowsTransparency="True" 
        WindowStyle="None" Background="Transparent" Topmost="True">

    <Border CornerRadius="5" Background="White" BorderThickness="1" BorderBrush="#CCCCCC" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Color="#444444" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Rectangle Grid.Column="0" Grid.RowSpan="4" Fill="#EEEEEE"/>
            <Rectangle Grid.Column="2" Grid.RowSpan="4" Fill="#EEEEEE"/>

            <Border Grid.Column="1" Grid.Row="0" Background="#444444" Padding="15,12" MouseDown="Header_MouseDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="18" Height="18" Background="White" CornerRadius="2" Margin="0,0,10,0">
                            <TextBlock Text="i" Foreground="#444444" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                        </Border>
                        <TextBlock Text="插件定制服务" Foreground="White" FontSize="14" FontWeight="Bold"/>
                    </StackPanel>
                    <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Center" 
                            Background="Transparent" BorderThickness="0" Foreground="White" 
                            FontSize="16" Click="Close_Click" Cursor="Hand"/>
                </Grid>
            </Border>

            <StackPanel Grid.Column="1" Grid.Row="1" Margin="20,15,20,5">
                <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20" Foreground="#333333"
                           Text="支持定制开发各种DLL、LSP、VLX格式的CAD插件。各类图集、图库、算量、快速绘图、批量打印、批量修改插件均可定制，不限专业，不限行业。"/>
            </StackPanel>

            <Border Grid.Column="1" Grid.Row="2" Margin="15,10,15,5" Background="#F5F5F5" 
                    BorderThickness="1" BorderBrush="#BDBDBD">
                <Border BorderThickness="1" BorderBrush="White" Padding="15,10">
                    <StackPanel>
                        <TextBlock Text="作者：lsz" Foreground="#95A5A6" FontSize="11" Margin="0,0,0,3"/>
                        <TextBlock Text="联系 QQ：3956376422" Foreground="#95A5A6" FontSize="11" Margin="0,0,0,3"/>
                        <TextBlock Text="加入交流群：816139079" Foreground="#95A5A6" FontSize="11" Margin="0,0,0,3"/>
                        <TextBlock Text="微信公众号：CAD 与 Office 二次开发" Foreground="#95A5A6" FontSize="11"/>
                    </StackPanel>
                </Border>
            </Border>

            <TextBlock Grid.Column="1" Grid.Row="3" Text="高效 · 安全 · 智能" 
                       VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                       Margin="0,0,0,15"
                       FontWeight="Bold" Foreground="#444444" Opacity="0.4" FontSize="10"/>
        </Grid>
    </Border>
</Window>