<Window x:Class="Plugin_AnalysisMaster.UI.MainControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="动线分析专家 PRO" Height="680" Width="380"
        WindowStyle="None" AllowsTransparency="False" ResizeMode="NoResize"
        Background="#2D2D2D" Foreground="#E0E0E0" Topmost="True">

    <Window.Resources>
        <Style TargetType="Slider">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#3498DB"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <Rectangle Width="4" Height="20" Fill="#3498DB" Margin="0,0,10,0"/>
            <TextBlock Text="PARAMETRIC ANALYSIS" FontSize="16" FontWeight="ExtraBold" VerticalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="1" Background="#1A1A1A" CornerRadius="6" BorderBrush="#444" BorderThickness="1">
            <Grid>
                <Canvas Name="PreviewCanvas" Width="300" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center">
                </Canvas>
                <TextBlock Text="实时预览" Foreground="#666" FontSize="10" Margin="10,5" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="2" Margin="0,10,0,0" VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <TextBlock Text="组合逻辑 (Composition)" Style="{StaticResource SectionHeader}"/>

                <TextBlock Text="起点端头 (Start Cap)" Foreground="#AAA" FontSize="11"/>
                <ComboBox Name="StartCapCombo" Margin="0,5" SelectionChanged="OnParamChanged">
                    <ComboBoxItem Content="None (平齐)"/>
                    <ComboBoxItem Content="Circle (圆点)"/>
                    <ComboBoxItem Content="Swallow (逆向燕尾)"/>
                </ComboBox>

                <TextBlock Text="路径样式 (Segment)" Foreground="#AAA" FontSize="11" Margin="0,8,0,0"/>
                <ComboBox Name="SegmentStyleCombo" Margin="0,5" SelectionChanged="OnParamChanged">
                    <ComboBoxItem Content="Solid (实线)"/>
                    <ComboBoxItem Content="Tapered (渐细线)"/>
                    <ComboBoxItem Content="Dashed (虚线)"/>
                </ComboBox>

                <TextBlock Text="终点端头 (End Cap)" Foreground="#AAA" FontSize="11" Margin="0,8,0,0"/>
                <ComboBox Name="EndCapCombo" Margin="0,5" SelectionChanged="OnParamChanged">
                    <ComboBoxItem Content="Arrow (标准箭头)"/>
                    <ComboBoxItem Content="Swallow (燕尾箭头)"/>
                    <ComboBoxItem Content="Stealth (隐形战机)"/>
                </ComboBox>

                <TextBlock Text="参数微调 (Refinement)" Style="{StaticResource SectionHeader}"/>

                <StackPanel>
                    <TextBlock Text="端头尺寸 (Cap Size)" Foreground="#AAA" FontSize="11"/>
                    <Slider Name="SizeSlider" Minimum="1" Maximum="30" Value="8" ValueChanged="OnParamChanged"/>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="0,0,5,0">
                            <TextBlock Text="起点宽度 (Start W)" Foreground="#AAA" FontSize="11"/>
                            <Slider Name="StartWidthSlider" Minimum="0.1" Maximum="10" Value="1.0" ValueChanged="OnParamChanged"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="终点宽度 (End W)" Foreground="#AAA" FontSize="11"/>
                            <Slider Name="EndWidthSlider" Minimum="0.1" Maximum="10" Value="0.5" ValueChanged="OnParamChanged"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="透明度 (Transparency)" Foreground="#AAA" FontSize="11" Margin="0,10,0,0"/>
                    <Slider Name="TransSlider" Minimum="0" Maximum="255" Value="0" ValueChanged="OnParamChanged"/>
                </StackPanel>

                <TextBlock Text="颜色选择" Foreground="#AAA" FontSize="11" Margin="0,10,0,5"/>
                <UniformGrid Columns="5" Name="ColorGrid">
                    <Button Background="#E74C3C" Height="25" Margin="2" Click="Color_Click"/>
                    <Button Background="#3498DB" Height="25" Margin="2" Click="Color_Click"/>
                    <Button Background="#2ECC71" Height="25" Margin="2" Click="Color_Click"/>
                    <Button Background="#F1C40F" Height="25" Margin="2" Click="Color_Click"/>
                    <Button Background="#9B59B6" Height="25" Margin="2" Click="Color_Click"/>
                </UniformGrid>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="3" Margin="0,20,0,0">
            <Button Content="PLACE ANALYSIS LINE" Height="45" Background="#3498DB" Foreground="White" 
                    FontWeight="Bold" BorderThickness="0" Click="StartDraw_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="关闭" Background="Transparent" Foreground="#666" BorderThickness="0" Margin="0,10,0,0" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>