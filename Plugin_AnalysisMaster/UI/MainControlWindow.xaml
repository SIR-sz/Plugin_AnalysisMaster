<Window x:Class="Plugin_AnalysisMaster.UI.MainControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="动线分析专家 PRO" Height="720" Width="380"
        WindowStyle="None" AllowsTransparency="False" ResizeMode="NoResize"
        Background="#2D2D2D" Foreground="#E0E0E0" Topmost="True">

    <Window.Resources>
        <Style TargetType="Slider">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#3498DB"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <Rectangle Width="4" Height="20" Fill="#3498DB" Margin="0,0,10,0"/>
            <TextBlock Text="参数化动线分析" FontSize="16" FontWeight="ExtraBold" VerticalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="1" Background="#1A1A1A" CornerRadius="6" BorderBrush="#444" BorderThickness="1">
            <Grid>
                <Canvas Name="PreviewCanvas" Width="300" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="实时预览" Foreground="#666" FontSize="10" Margin="10,5" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="2" Margin="0,10,0,0" VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <TextBlock Text="样式组合" Style="{StaticResource SectionHeader}"/>

                <TextBlock Text="起点样式" Foreground="#AAA" FontSize="11"/>
                <ComboBox Name="StartCapCombo" Margin="0,5" SelectionChanged="OnParamChanged">
                    <ComboBoxItem Content="平齐 (None)"/>
                    <ComboBoxItem Content="圆点 (Circle)"/>
                    <ComboBoxItem Content="逆向燕尾 (Swallow)"/>
                </ComboBox>

                <TextBlock Text="路径分类" Foreground="#AAA" FontSize="11" Margin="0,8,0,0"/>
                <ComboBox Name="PathTypeCombo" Margin="0,5" SelectionChanged="OnParamChanged">
                    <ComboBoxItem Content="不生成路径 (None)"/>
                    <ComboBoxItem Content="实线类 (Solid)"/>
                    <ComboBoxItem Content="虚线类 (Dashed)"/>
                    <ComboBoxItem Content="自定义图案 (Pattern)"/>
                </ComboBox>

                <Button Content="选择加载 CAD 内置线型..." 
        Height="28" Margin="0,2,0,5" 
        Background="#3D3D3D" Foreground="#3498DB" 
        BorderBrush="#444" BorderThickness="1"
        FontSize="10" Click="SelectLinetype_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="3"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <TextBlock Text="终点样式" Foreground="#AAA" FontSize="11" Margin="0,8,0,0"/>
                <ComboBox Name="EndCapCombo" Margin="0,5" SelectionChanged="OnParamChanged">
                    <ComboBoxItem Content="标准箭头 (Arrow)"/>
                    <ComboBoxItem Content="燕尾箭头 (Swallow)"/>
                    <ComboBoxItem Content="隐形战机 (Stealth)"/>
                </ComboBox>

                <TextBlock Text="数值微调" Style="{StaticResource SectionHeader}"/>

                <Grid Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="端头缩放尺寸" Foreground="#AAA" FontSize="11"/>
                        <Slider Name="SizeSlider" Minimum="1" Maximum="30" Value="8" ValueChanged="OnParamChanged"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="{Binding ElementName=SizeSlider, Path=Value, StringFormat={}{0:F1}}" 
                               VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="White" Margin="0,0,0,8"/>
                </Grid>

                <Grid Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="起点物理宽度" Foreground="#AAA" FontSize="11"/>
                        <Slider Name="StartWidthSlider" Minimum="0.1" Maximum="15" Value="1.0" ValueChanged="OnParamChanged"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="{Binding ElementName=StartWidthSlider, Path=Value, StringFormat={}{0:F1}}" 
                               VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="White" Margin="0,0,0,8"/>
                </Grid>

                <Grid Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="腰部收束宽度" Foreground="#AAA" FontSize="11"/>
                        <Slider Name="MidWidthSlider" Minimum="0.1" Maximum="15" Value="0.8" ValueChanged="OnParamChanged"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="{Binding ElementName=MidWidthSlider, Path=Value, StringFormat={}{0:F1}}" 
                               VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="White" Margin="0,0,0,8"/>
                </Grid>

                <Grid Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="终点物理宽度" Foreground="#AAA" FontSize="11"/>
                        <Slider Name="EndWidthSlider" Minimum="0.1" Maximum="15" Value="0.5" ValueChanged="OnParamChanged"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="{Binding ElementName=EndWidthSlider, Path=Value, StringFormat={}{0:F1}}" 
                               VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="White" Margin="0,0,0,8"/>
                </Grid>

                <Grid Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="虚线显示比例" Foreground="#AAA" FontSize="11"/>
                        <Slider Name="LtScaleSlider" Minimum="0.01" Maximum="5.0" Value="1.0" 
                                SmallChange="0.01" LargeChange="0.1" ValueChanged="OnParamChanged"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="{Binding ElementName=LtScaleSlider, Path=Value, StringFormat={}{0:F2}}" 
                               VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="Gold" Margin="0,0,0,8"/>
                </Grid>

                <Grid Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="图形透明度" Foreground="#AAA" FontSize="11"/>
                        <Slider Name="TransSlider" Minimum="0" Maximum="255" Value="0" ValueChanged="OnParamChanged"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="{Binding ElementName=TransSlider, Path=Value, StringFormat={}{0:F0}}" 
                               VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="#AAA" Margin="0,0,0,8"/>
                </Grid>

                <TextBlock Text="颜色选择" Foreground="#AAA" FontSize="11" Margin="0,15,0,5"/>
                <UniformGrid Columns="5" Name="ColorGrid">
                    <Button Background="#E74C3C" Height="25" Margin="2" Click="Color_Click"/>
                    <Button Background="#3498DB" Height="25" Margin="2" Click="Color_Click"/>
                    <Button Background="#2ECC71" Height="25" Margin="2" Click="Color_Click"/>
                    <Button Background="#F1C40F" Height="25" Margin="2" Click="Color_Click"/>
                    <Button Background="#9B59B6" Height="25" Margin="2" Click="Color_Click"/>
                </UniformGrid>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="3" Margin="0,20,0,0">
            <Button Content="绘制动线" Height="45" Background="#3498DB" Foreground="White" 
                    FontWeight="Bold" BorderThickness="0" Click="StartDraw_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="关闭" Background="Transparent" Foreground="#666" BorderThickness="0" Margin="0,10,0,0" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>